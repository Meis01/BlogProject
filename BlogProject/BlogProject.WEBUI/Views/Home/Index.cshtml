@model List<Post>

@{
    ViewData["Title"] = "Home Page";
}

<section class="blog-posts">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="all-blog-posts">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <div class="blog-post">
                                    <div class="blog-thumb">
                                        <img src="~/Uploads/@item.Imagepath" alt="">
                                    </div>
                                    <div class="down-content">
                                        <span>@*@item.Category.CategoryName*@</span>
                                        <a asp-controller="Home" asp-action="Post" asp-route-id="@item.ID"><h4>@item.Title</h4></a>
                                        <ul class="post-info">
                                            <li><a href="#">@*@item.User.FirstName*@</a></li>
                                            @* Tarih kısa formatta getirilecek *@
                                            <li><a href="#">@item.CreatedDate</a></li>
                                            <li><a href="#">12 Comments</a></li>
                                        </ul>
                                        <p>@item.PostDetail</p>
                                        <div class="post-options">
                                            <div class="row">
                                                <div class="col-6">
                                                    <ul class="post-tags">
                                                        <li><i class="fa fa-tags"></i></li>
                                                        <li><a href="#">@item.Tags</a></li>
                                                        @*<li><a href="#">Nature</a></li>*@
                                                    </ul>
                                                </div>
                                                <div class="col-6">
                                                    <ul class="post-share">
                                                        <li><i class="fa fa-eye"></i></li>
                                                        <li><a href="#">@item.ViewCount</a></li>

                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <div class="col-lg-12">
                            <div class="main-button">
                                <a asp-controller="Post" asp-action="Index">Tüm Yazıları Göster</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="sidebar-item search">
                                <form id="search_form" name="gs" method="GET" action="#">
                                    <input type="text" name="q" class="searchText" placeholder="makale ara..." autocomplete="on">
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item recent-posts">
                                <div class="sidebar-heading">
                                    <h2>Son Yazılar</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @foreach (var item in ViewBag.SonYazilar)
                                        {
                                            <li>
                                                <a href="post-details.html">
                                                    <h5>@item.Title</h5>
                                                    <span>@item.CreatedDate</span>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item categories">
                                <div class="sidebar-heading">
                                    <h2>Kategoriler</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        @foreach (var item in ViewBag.Kategoriler)
                                        {
                                            <li><a href="#">&bull; @item.CategoryName</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="sidebar-item tags">
                                <div class="sidebar-heading">
                                    <h2>Etiket Bulutu</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li><a href="#">Lifestyle</a></li>
                                        <li><a href="#">Creative</a></li>
                                        <li><a href="#">HTML5</a></li>
                                        <li><a href="#">Inspiration</a></li>
                                        <li><a href="#">Motivation</a></li>
                                        <li><a href="#">PSD</a></li>
                                        <li><a href="#">Responsive</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>